- var sections = {'portfolio' : 'Portfolio', 'a-propos' : 'A propos', 'skills' : 'Comp√©tences', 'parcours' : 'Parcours', 'contact' : 'Contact'};
doctype html
html(lang="fr")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="description", content="Front & Back-end Developer")
    meta(name="author", content="Sylvain Gougouzian")
    title Sylvain "GouZ" Gougouzian | Full Stack Developer
    link(href="http://fonts.googleapis.com/css?family=Montserrat:400,700|Lato:400,700,400italic,700italic", rel="stylesheet")
    link(href="assets/css/app.css", rel="stylesheet")

  body#main
    nav.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header.page-scroll
          button.navbar-toggle(type="button", data-toggle="collapse", data-target="#menu")
            span.sr-only Menu
            - for (var x = 0; x < 3; x++)
              span.icon-bar
          a.navbar-brand(href="#main") gouz
        #menu.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li.hidden
              a(href="#main")
            each val, index in sections
              li.page-scroll
                a(href="#"+index)= val
    
    header
      .container
        .row
          .col-lg-12
            img.img-responsive.img-circle(src="assets/img/profile.png", alt="profile")
            .intro-text
              span.name Sylvain Gougouzian
              hr.star-light
              span.skills Full Stack Developer

    include sections/portfolio
    include sections/a-propos
    include sections/skills
    include sections/parcours


    footer#contact.text-center
      .footer-above
        .container
          .row
            .footer-col.col-md-12
              h3 Contact
              ul.list-inline
                li
                  a.btn-social.btn-outline(href="mailto:sylvain@gougouzian.fr", target="_blank")
                    i.fa.fa-fw.fa-envelope
                li
                  a.btn-social.btn-outline(href="http://www.twitter.com/gouz", target="_blank")
                    i.fa.fa-fw.fa-twitter
                li
                  a.btn-social.btn-outline(href="http://github.com/gouz", target="_blank")
                    i.fa.fa-fw.fa-github
                li
                  a.btn-social.btn-outline(href="https://plus.google.com/+SylvainGouZGougouzian", target="_blank")
                    i.fa.fa-fw.fa-google-plus
                li
                  a.btn-social.btn-outline(href="http://soundcloud.com/gouz", target="_blank")
                    i.fa.fa-fw.fa-soundcloud
                li
                  a.btn-social.btn-outline(href="http://lnkd.in/p45dUM", target="_blank")
                    i.fa.fa-fw.fa-linkedin
                li
                  a.btn-social.btn-outline(href="http://www.facebook.com/gougouzian", target="_blank")
                    i.fa.fa-fw.fa-facebook
      .footer-below
        .container
          .row
            .col-lg-12
              |Sylvain Gougouzian
      
      .scroll-top.page-scroll.visible-xs.visble-sm
        a.btn.btn-primary(href="#main")
          i.fa.fa-chevron-up

